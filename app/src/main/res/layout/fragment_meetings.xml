<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Fragments.MeetingsFragment">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <Button
                style="@style/categoryButton"
                android:text="@string/meetings_tbp"
                android:tag="1"
                android:onClick="switchMeetingsType"/>
            <Button
                style="@style/categoryButton"
                android:text="@string/meetings_p"
                android:tag="2"
                android:onClick="switchMeetingsType"/>
            <Button
                style="@style/categoryButton"
                android:text="@string/meeting_mg"
                android:id="@+id/fragment_meetings_planned_meetings"
                android:tag="3"
                android:onClick="switchMeetingsType"/>
        </LinearLayout>

    </HorizontalScrollView>
    <android.widget.ListView
        android:id="@+id/meetingsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    </android.widget.ListView>


</LinearLayout>
